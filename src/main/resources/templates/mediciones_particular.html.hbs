{{#partial "titulo"}}
    <title>Mediciones</title>
{{/partial}}

{{#partial "contenido"}}
    <section>
        <h2 align="center">Datos de medicion</h2>
        <form method="post" action="/mediciones/particular">
            <div class="form-group">
                <label for="tipoConsumo">Tipo de Consumo</label>
                <select class="form-control" id="tipoDeConsumoId">
                    {{#tiposDeConsumos}}
                    <option>{{tipo}}</option>
                    {{/tiposDeConsumos}}
                </select>
            </div>
            <div class="form-group">
                <label for="valor">Valor</label>
                <input type="text" class="form-control" id="valorId" placeholder="Ingrese valor sin unidad">
            </div>
            <div class="form-group">
                <label for="periodicidad">Periodicidad</label>
                <select class="form-control" id="periodicidadId">
                    <option>Mensual</option>
                    <option>Anual</option>
                </select>
            </div>
            <div class="form-group">
                <label for="periodoImputacion">Periodo de imputacion</label>
                <input type="text" class="form-control" id="periodoImputacionId" placeholder="Formato MM/AAAA o AAAA">
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </section>

{{/partial}}

{{> layout.html.hbs }}